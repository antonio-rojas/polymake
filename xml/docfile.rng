<grammar xmlns="http://relaxng.org/ns/structure/1.0"
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
         ns="http://www.polymake.org/ns/docs#3">

  <start>
    <choice>
      <ref name="Application" />
      <ref name="Version" />
    </choice>
  </start>

  <define name="Application">
    <element name="application">
      <ref name="NameAttr" />
      <ref name="Description" />

      <optional>
        <element name="imports-from">
          <ref name="AppList" />
        </element>
      </optional>

      <optional>
        <element name="uses">
          <ref name="AppList" />
        </element>
      </optional>

      <optional>
        <element name="property-types">
          <ref name="PropertyTypes" />
        </element>
      </optional>

      <optional>
        <element name="common-option-lists">
          <ref name="CommonOptionLists" />
        </element>
      </optional>

      <optional>
        <element name="objects">
          <ref name="Objects" />
        </element>
      </optional>

      <optional>
        <element name="user-functions">
          <ref name="FuncList" />
        </element>
      </optional>

    </element>
  </define>

  <define name="AppList">
    <oneOrMore>
      <element name="application">
        <ref name="NameAttr" />
      </element>
    </oneOrMore>
  </define>

  <define name="UserMethods">
    <element name="user-methods">
      <ref name="FuncList" />
    </element>
  </define>

  <define name="FuncList">
    <zeroOrMore>
      <element name="category">
        <attribute name="name" />
        <ref name="Id" />
        <optional>
          <ref name="Description" />
        </optional>
        <oneOrMore>
          <ref name="Function" />
        </oneOrMore>
      </element>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="Function" />
    </zeroOrMore>
  </define>

  <define name="Function">
    <element name="function">
      <ref name="NameAttr" />
      <ref name="Id" />
      <zeroOrMore>
        <element name="tparam">
          <attribute name="name" />
	  <ref name="Description" />
        </element>
      </zeroOrMore>
      <zeroOrMore>
        <element name="param">
          <attribute name="name" />
	  <attribute name="type" />
          <attribute name="href" />
          <optional>
	    <attribute name="class" />
          </optional>
          <optional>
            <ref name="Description" />
          </optional>
        </element>
      </zeroOrMore>
      <zeroOrMore>
        <choice>
          <ref name="Option" />
          <element name="options">
            <ref name="Description" />
            <oneOrMore>
              <ref name="Option" />
            </oneOrMore>
          </element>
          <ref name="CommonOptionListRef" />
        </choice>
      </zeroOrMore>
      <optional>
        <element name="return">
          <attribute name="type" />
          <attribute name="href" />
          <optional>
	    <attribute name="class" />
          </optional>
          <optional>
	    <ref name="Description" />
          </optional>
        </element>
      </optional>
      <optional>
        <element name="author">
          <attribute name="name" />
        </element>
      </optional>
      <optional>
        <ref name="Description" />
      </optional>
    </element>
  </define>

  <define name="PropertyTypes">
    <zeroOrMore>
      <element name="category">
        <attribute name="name" />
        <ref name="Id" />
        <optional>
          <ref name="Description" />
        </optional>
        <oneOrMore>
          <ref name="PropertyType" />
        </oneOrMore>
      </element>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="PropertyType" />
    </zeroOrMore>
  </define>

  <define name="PropertyType">
    <element name="property-type">
      <ref name="NameAttr" />
      <ref name="Id" />
      <ref name="Description" />

      <optional>
        <element name="derived-from">
          <attribute name="type" />
          <attribute name="href" />
        </element>
      </optional>

      <optional>
        <ref name="UserMethods" />
      </optional>
    </element>
  </define>

  <define name="Properties">
    <element name="properties">
      <zeroOrMore>
        <element name="category">
          <attribute name="name" />
          <ref name="Id" />
          <optional>
            <ref name="Description" />
          </optional>
          <oneOrMore>
            <ref name="Property" />
          </oneOrMore>
        </element>
      </zeroOrMore>
      <zeroOrMore>
        <ref name="Property" />
      </zeroOrMore>
    </element>
  </define>

  <define name="Permutations">
    <element name="permutations">
      <zeroOrMore>
        <element name="permutation">
          <ref name="NameAttr" />
          <ref name="Id" />
          <ref name="Description" />

          <optional>
            <ref name="Properties" />
          </optional>
          <optional>
            <ref name="UserMethods" />
          </optional>
        </element>
      </zeroOrMore>
    </element>
  </define>

  <define name="Property">
    <element name="property">
      <ref name="NameAttr" />
      <ref name="Id" />
      <attribute name="type" />
      <attribute name="href" />
      <optional>
        <attribute name="class" />
      </optional>
      <ref name="Description" />

      <optional>
        <ref name="Properties" />
      </optional>
      <optional>
        <ref name="UserMethods" />
      </optional>
    </element>
  </define>

  <define name="CommonOptionLists">
    <zeroOrMore>
      <element name="category">
        <attribute name="name" />
        <ref name="Id" />
        <optional>
          <ref name="Description" />
        </optional>
        <oneOrMore>
          <ref name="CommonOptionList" />
        </oneOrMore>
      </element>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="CommonOptionList" />
    </zeroOrMore>
  </define>

  <define name="CommonOptionList">
    <element name="common-option-list">
      <attribute name="name" />
      <ref name="Id" />
      <ref name="Description" />
      <optional>
        <element name="imports-from">
          <oneOrMore>
            <ref name="CommonOptionListRef" />
          </oneOrMore>
        </element>
      </optional>
      <oneOrMore>
        <ref name="Option" />
      </oneOrMore>
    </element>
  </define>

  <define name="CommonOptionListRef">
    <element name="common-option-list">
      <attribute name="name" />
      <attribute name="href" />
    </element>
  </define>

  <define name="Objects">
    <zeroOrMore>
      <element name="category">
        <attribute name="name" />
        <ref name="Id" />
        <optional>
          <ref name="Description" />
        </optional>
        <oneOrMore>
          <ref name="Object" />
        </oneOrMore>
      </element>
    </zeroOrMore>
    <zeroOrMore>
      <ref name="Object" />
    </zeroOrMore>
  </define>

  <define name="Object">
    <element name="object">
      <attribute name="name" />
      <ref name="Id" />
      <optional>
        <ref name="Description" />
      </optional>

      <zeroOrMore>
        <element name="derived-from">
          <attribute name="object" />
          <attribute name="href" />
        </element>
      </zeroOrMore>

      <optional>
        <ref name="Properties" />
      </optional>
      <optional>
        <ref name="Permutations" />
      </optional>
      <optional>
	<ref name="UserMethods" />
      </optional>
    </element>
  </define>

  <define name="Id">
    <attribute name="xml:id">
      <data type="ID" />
    </attribute>
  </define>

  <define name="Option">
    <element name="option">
      <attribute name="name" />
      <attribute name="type" />
      <attribute name="href" />
      <optional>
        <attribute name="class" />
      </optional>
      <optional>
        <ref name="Description" />
      </optional>
    </element>
  </define>

  <define name="NameAttr">
    <attribute name="name">
      <data type="string">
        <param name="pattern">[a-zA-Z][a-zA-Z_0-9]*</param>
      </data>
    </attribute>
  </define>

  <define name="Description">
    <element name="description">
      <ref name="HTML" />
    </element>
  </define>

  <define name="HTML">
    <oneOrMore>
      <choice>
        <text/>
        <ref name="HTMLelement"/>
      </choice>
    </oneOrMore>
  </define>

  <define name="HTMLelement">
    <element>
      <nsName ns="http://www.w3.org/1999/xhtml" />
      <zeroOrMore>
        <attribute>
	  <anyName/>
	</attribute>
      </zeroOrMore>
      <ref name="HTML"/>
    </element>
  </define>

  <define name="Version">
    <element name="version">
      <choice>
        <element name="revision">
          <text />
        </element>
        <element name="release">
          <text />
        </element>
      </choice>
      <optional>
        <element name="extensions">
          <oneOrMore>
            <element name="extension">
              <text />
            </element>
          </oneOrMore>
        </element>
      </optional>
    </element>
  </define>

</grammar>
